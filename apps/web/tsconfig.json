{
  "extends": "@zingcrafter/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": [], // will be later referenced from @zingcrafter/lib/types
    "strictNullChecks": true,
    "incremental": false
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
